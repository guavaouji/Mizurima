<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.isao.mizurima.fragments.SettingsFragment"
    tools:deviceIds="wear">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/settings_container_top_textView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text=" "
            android:focusable="true"
            android:focusableInTouchMode="true"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/daily_target_textView"
            android:layout_width="155dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="22sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            android:text="@string/daily_target_label" />

        <Spinner
            android:id="@+id/daily_target_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:spinnerMode="dialog" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/average_water_supply_textView"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="22sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            android:text="@string/average_water_supply_label" />

        <Spinner
            android:id="@+id/average_water_supply_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:spinnerMode="dialog" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/notification_start_time_textView"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="22sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            android:text="@string/notification_start_time_label" />

        <Spinner
            android:id="@+id/notification_start_time_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:spinnerMode="dialog" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/notification_end_time_textView"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            app:autoSizeMaxTextSize="22sp"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            android:text="@string/notification_end_time_label" />

        <Spinner
            android:id="@+id/notification_end_time_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp"
            android:spinnerMode="dialog" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="#ff808080" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/from_settings_to_registration_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/to_registration_label"
                android:src="@drawable/baseline_add_circle_white_48" />

            <ImageView
                android:id="@+id/from_settings_to_history_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:contentDescription="@string/to_history_label"
                android:src="@drawable/baseline_history_white_48" />
        </LinearLayout>
    </LinearLayout>


</androidx.wear.widget.BoxInsetLayout>